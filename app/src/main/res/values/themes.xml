<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonRounded">

            <item name="android:background">@drawable/background_buttonr</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textSize">@dimen/textSizeButton</item>
            <item name="android:layout_marginStart">@dimen/buttonMargin</item>
            <item name="android:layout_marginEnd">@dimen/buttonMargin</item>
            <item name="android:elevation">@dimen/buttonElevation</item>
            <item name="android:textAllCaps">false</item>

    </style>

    <style name="textViewTitle2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeButton</item>
    </style>



    <style name="dialogFragmentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>


    <style name="z_bottom_sheet_style" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/z_modal_style</item>

    </style>

    <style name="z_modal_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/z_shape_radius_corner</item>

    </style>

    <style name="tvBottomSheetStyle" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tvBottomSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputLayout">
        <item name="android:textColor">@color/letra</item>
        <item name="android:textSize">@dimen/letra</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tvBottomSheetStyle2" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tvBottomSize2</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="z_modal_btn" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/z_shape_radius_corner_btn</item>

    </style>


</resources>