<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">
    
    
    <TextView
        android:id="@+id/tvContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tvNameSize"
        android:layout_marginStart="@dimen/tvName"
        android:layout_marginTop="@dimen/tvNameTop"
        tools:text="Alondra Abrego Balderas"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/gris"
        android:textSize="@dimen/tvPhoneSize"
        android:layout_marginStart="@dimen/tvName"
        android:layout_marginTop="@dimen/tvNameTop"
        android:layout_marginBottom="@dimen/tvPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvContacto"
        tools:text="Telefono: 2722272676"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/deleteSize"
        android:layout_height="@dimen/deleteSize"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="@dimen/deleteSize"
        android:layout_height="@dimen/deleteSize"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/ivDeleteEnd"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>